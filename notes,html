    <script>
        function toggleDetails(card) {
        const nextSibling = card.nextElementSibling;
        if (nextSibling && nextSibling.classList.contains('report-details-card')) {
            nextSibling.style.display = nextSibling.style.display === 'none' || nextSibling.style.display === '' ? 'block' : 'none';
        }
    }

    document.querySelectorAll('.report-details-row button').forEach(button => {
        button.addEventListener('click', function() {
            const reportCard = this.closest('.report-details-card');
            const reportTitle = reportCard.previousElementSibling.querySelector('.card-title').textContent;
            const details = Array.from(reportCard.querySelectorAll('p')).map(p => p.textContent).join('<br>');

            document.getElementById('reportModalLabel').textContent = reportTitle;
            document.getElementById('modalReportDetails').innerHTML = details;

            $('#reportModal').modal('show');
        });
    });
    </script>
    <script>
        function fetchSubmittedReports() {
            const reportsRef = database.ref('reports');
            reportsRef.orderByChild('status').equalTo('submitted').once('value', snapshot => {
                const reports = snapshot.val();
                if (reports) {
                    Object.keys(reports).forEach(reportId => {
                        const report = reports[reportId];
                        console.log(report);
                        fetchReportImage(report.refNumber); // Fetch image for each report
                    });
                }
            });
        }
    </script>
    <script>
        function fetchReportImage(refNumber) {
            const storageRef = storage.ref();
            const imageRef = storageRef.child(`images/${refNumber}.jpg`); // Adjust path and extension if needed
    
            imageRef.getDownloadURL().then(url => {
                console.log('Image URL:', url);
                // You can now use this URL to display the image
                displayReportImage(refNumber, url);
            }).catch(error => {
                console.error('Error fetching image:', error);
            });
        }
    
        function displayReportImage(refNumber, url) {
            // Create an img element or use any method to display the image
            const img = document.createElement('img');
            img.src = url;
            img.alt = `Report ${refNumber}`;
            img.style.width = '100px'; // Adjust size as needed
            img.style.height = 'auto';
            document.body.appendChild(img); // Append to the body or a specific container
        }
    </script>
    
    
